<% include includes/header.ejs %>
    <div class="container">
        <% if (message) { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>

        <% if (store) { %>
            <form class="add-store-form" action="" method="post" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="key">key</label>
                        <input type="text" class="form-control" name="key" id="key" value="<%= store.key_name %>" required>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="first-name">Value</label>
                        <input type="text" class="form-control" name="value" id="value" value="<%= store.value_name %>" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-success float-right">Update store</button>
            </form>
        <% } else { %>
            <p class="text-center">key-value Not Found. Go <a href="/add">here</a> to add stores.</p>
        <% } %>
    </div>
<% include includes/footer.ejs %>